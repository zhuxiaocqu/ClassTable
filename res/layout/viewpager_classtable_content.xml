<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/classtable_sllv_view"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/Layout_Morning"
                android:layout_width="fill_parent"
                android:layout_height="135dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/TextView_Morning"
                    android:layout_width="25dip"
                    android:layout_height="match_parent"
                    android:background="#2f00ffef"
                    android:gravity="center"
                    android:textColor="#ffffffff"
                    android:text="@string/beforenoon" >
                </TextView>

                <LinearLayout
                    android:layout_width="275dip"
                    android:layout_height="135dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/Layout_FirstClass"
                        android:layout_width="fill_parent"
                        android:layout_height="67dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/TextView_FirstClassNo"
                            android:layout_width="20dip"
                            android:layout_height="match_parent"
                            android:background="#2feeee09"
                            android:textColor="#ffffffff"
                            android:gravity="center" >
                        </TextView>

                        <TextView
                            android:id="@+id/TextView_FirstClassText"
                            android:layout_width="250dip"
                            android:layout_height="match_parent"
                            android:textColor="#ffffffff"
                            android:background="@drawable/course_txtview_fir_selector" >
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Layout_SecondClass"
                        android:layout_width="fill_parent"
                        android:layout_height="68dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/TextView_SecondClassNo"
                            android:layout_width="20dip"
                            android:layout_height="match_parent"
                            android:background="#2f00ff00"
                            android:textColor="#ffffffff"
                            android:gravity="center" >
                        </TextView>

                        <TextView
                            android:id="@+id/TextView_SecondClassText"
                            android:layout_width="250dip"
                            android:layout_height="match_parent"
                            android:textColor="#ffffffff"
                            android:background="@drawable/course_txtview_sec_selector" >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Layout_Afternoon"
                android:layout_width="fill_parent"
                android:layout_height="135dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/TextView_Afternoon"
                    android:layout_width="25dip"
                    android:layout_height="match_parent"
                    android:background="#2f008C69"
                    android:textColor="#ffffffff"
                    android:gravity="center"
                    android:text="@string/afternoon" >
                </TextView>

                <LinearLayout
                    android:layout_width="275dip"
                    android:layout_height="135dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/Layout_ThridClass"
                        android:layout_width="fill_parent"
                        android:layout_height="67dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/TextView_ThridClassNo"
                            android:layout_width="20dip"
                            android:layout_height="match_parent"
                            android:background="#2feeee09"
                            android:textColor="#ffffffff"
                            android:gravity="center" >
                        </TextView>

                        <TextView
                            android:id="@+id/TextView_ThridClassText"
                            android:layout_width="250dip"
                            android:layout_height="match_parent"
                            android:textColor="#ffffffff"
                            android:background="@drawable/course_txtview_fir_selector" >
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Layout_FourthClass"
                        android:layout_width="fill_parent"
                        android:layout_height="68dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/TextView_FourthClassNo"
                            android:layout_width="20dip"
                            android:layout_height="match_parent"
                            android:background="#2f00ff00"
                            android:textColor="#ffffffff"
                            android:gravity="center" >
                        </TextView>

                        <TextView
                            android:id="@+id/TextView_FourthClassText"
                            android:layout_width="250dip"
                            android:layout_height="match_parent"
                            android:textColor="#ffffffff"
                            android:background="@drawable/course_txtview_sec_selector" >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Layout_Night"
                android:layout_width="fill_parent"
                android:layout_height="135dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/TextView_Night"
                    android:layout_width="25dip"
                    android:layout_height="match_parent"
                    android:background="#2f6495ED"
                    android:textColor="#ffffffff"
                    android:gravity="center"
                    android:text="@string/night" >
                </TextView>

                <LinearLayout
                    android:layout_width="275dip"
                    android:layout_height="135dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/Layout_FifthClass"
                        android:layout_width="fill_parent"
                        android:layout_height="67dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/TextView_FifthClassNo"
                            android:layout_width="20dip"
                            android:layout_height="match_parent"
                            android:background="#2feeee09"
                            android:textColor="#ffffffff"
                            android:gravity="center" >
                        </TextView>

                        <TextView
                            android:id="@+id/TextView_FifthClassText"
                            android:layout_width="250dip"
                            android:layout_height="match_parent"
                            android:textColor="#ffffffff"
                            android:background="@drawable/course_txtview_fir_selector" >
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Layout_SixthClass"
                        android:layout_width="fill_parent"
                        android:layout_height="68dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/TextView_SixthClassNo"
                            android:layout_width="20dip"
                            android:layout_height="match_parent"
                            android:textColor="#ffffffff"
                            android:background="#2f00ff00"
                            android:gravity="center" >
                        </TextView>

                        <TextView
                            android:id="@+id/TextView_SixthClassText"
                            android:layout_width="250dip"
                            android:layout_height="match_parent"
                            android:textColor="#ffffffff"
                            android:background="@drawable/course_txtview_sec_selector" >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>